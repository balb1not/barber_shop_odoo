<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="barber_scheduling_tree_view" model="ir.ui.view">
            <field name="name">barber.scheduling.tree.view</field>
            <field name="model">barber.scheduling</field>
            <field name="arch" type="xml">
                <tree delete="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="barber_scheduling_form_view" model="ir.ui.view">
            <field name="name">barber.scheduling.form.view</field>
            <field name="model">barber.scheduling</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="scheduling">
                        <group name="main_scheduling_group">
                            <field name="name"/>
                            <field name="customer_id"/>
                            <field name="barber_id"/>
                            <field name="service_ids"/>
                            <field name="start_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="barber_scheduling_action" model="ir.actions.act_window">
            <field name="name">scheduling</field>
            <field name="res_model">barber.scheduling</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>    
        </record>
    </data>
</odoo>
