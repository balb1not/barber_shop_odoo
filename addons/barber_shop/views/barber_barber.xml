<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="barber_barber_view_form" model="ir.ui.view">
            <field name="name">barber.barber.form</field>
            <field name="model">barber.barber</field>
            <field name="arch" type="xml">
                <form string="Barber">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="barber_barber_view_tree" model="ir.ui.view">
            <field name="name">barber.barber.tree</field>
            <field name="model">barber.barber</field>
            <field name="arch" type="xml">
                <tree string="Barbers">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="barber_barber_action" model="ir.actions.act_window">
            <field name="name">Barbers</field>
            <field name="res_model">barber.barber</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
    

</odoo>
