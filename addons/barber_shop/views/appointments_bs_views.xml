<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="appointments_bs_tree_view" model="ir.ui.view">
            <field name="name">appointments.bs.tree.view</field>
            <field name="model">main.barber.shop</field>
            <field name="arch" type="xml">
                <tree delete="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="appointments_bs_form_view" model="ir.ui.view">
            <field name="name">appointments.bs.tree.view</field>
            <field name="model">main.barber.shop</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Appointments">
                        <group name="main_appointments_group">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="appointments_bs_action" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="res_model">main.barber.shop</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>    
        </record>
    </data>
</odoo>
